//- property-gallery
div(class="")
  //- Property-gallery-wrapper
  div(class="px-4 pb-20 mx-auto max-w-7xl")
    h2(class="mt-10 text-3xl text-gray-700 md:text-4xl lg:text-5xl" ) Searching for the Best Places?
    //- card container
    div(class="grid grid-cols-1 gap-3 mt-5 pb-18 md:grid-cols-2 lg:grid-cols-3 lg:mt-10")
      each cardData in cardArr 
        +card(cardData)

//- propery-explore 
div(class="bg-gray-200")
  //- property-explore-wrapper
  div(class="flex flex-col items-center px-4 py-10 mx-auto lg:py-16 lg:flex-row max-w-7xl")
    //- left side
    div(class="pr-10 mb-8 text-center lg:w-2/5 lg:mb-0 lg:text-left")
