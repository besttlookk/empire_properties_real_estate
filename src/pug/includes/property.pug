        div(class="relative flex flex-col items-center w-1/4 p-8 space-y-4 explore-item")
          i.fas.fa-building-columns.fa-3x(class="text-gray-700")
          p(class="text-xs font-semibold text-center text-gray-600 hover:text-green-500 hover:underline") Studio 
          
        div(class="relative flex flex-col items-center w-1/4 p-8 space-y-4 explore-item")
          i.fas.fa-suitcase.fa-3x(class="text-gray-700")
          p(class="text-xs font-semibold text-center text-gray-600 hover:underline hover:text-green-500 ") Office